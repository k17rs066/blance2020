        <Button Margin="635,0,705,120" Width="290" Height="215" Click="TargetGame_Normal" FontSize="70" HorizontalAlignment="Center" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"  Background="Orange">
