        <ComboBox Name ="combo" FontSize ="50" HorizontalAlignment="Left" Height="65" Margin="183,225,0,0" VerticalAlignment="Top" Width="175" Grid.Column="1"/>
        <ComboBox Name ="combokei" FontSize ="50" HorizontalAlignment="Left" Height="65" Margin="183,331,0,0" VerticalAlignment="Top" Width="175" Grid.Column="1"/>
