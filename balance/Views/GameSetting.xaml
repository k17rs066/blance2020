        <TextBlock Name ="han" FontSize="50" HorizontalAlignment="Left" Height="65" Margin="72,331,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="281" Grid.ColumnSpan="2"/>
        <TextBox Name ="cline" Text ="" FontSize ="50" HorizontalAlignment="Left" Height="65" Margin="621,165,-218,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Grid.Column="1"/>
        <TextBox Name ="set" Text ="" FontSize="50" HorizontalAlignment="Left" Height="65" Margin="621,274,-218,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Grid.Column="1"/>
        <TextBlock Text ="%" FontSize ="50" HorizontalAlignment="Left" Height="65" Margin="413,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" RenderTransformOrigin="0.758,0.764" Grid.Column="1"/>
