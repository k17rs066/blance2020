<Window x:Class="balance.Views.GameSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameSetting" Height="614.5" Width="791.5" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="579*"/>
        </Grid.ColumnDefinitions>
        <!-- TextBlock Name ="gamemode" HorizontalAlignment="Left" FontSize ="50" Height="80.8" Margin="32.2,34.6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="351.2"/-->
        <Button Content="戻る" FontSize ="40" HorizontalAlignment="Left" Height="62" Margin="221,465,0,0" VerticalAlignment="Top" Width="183" Click="modo_Click" RenderTransformOrigin="0.76,1.016" Grid.Column="1"/>
